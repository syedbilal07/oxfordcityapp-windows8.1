            <TextBlock Margin="10" FontSize="30" HorizontalAlignment="Center">Shopping Malls</TextBlock>
        </StackPanel>

        <StackPanel Margin="55">
            <TextBlock Text="&#xD;"/>
            <TextBlock Margin="10" FontSize="30">i. Tommy Hilfiger</TextBlock>
            <TextBlock Margin="10" FontSize="30">(Clothing Store)</TextBlock>
            <TextBlock Margin="10" FontSize="30">Chain featuring the designer's classic sportswear and accessories. Some focus on apparel for kids.</TextBlock>
            <TextBlock HorizontalAlignment="Left" FontSize="20">Address : Albion House, Westgate Shopping Centre, Littlegate St, Oxford OX1 1AN, UK</TextBlock>
            <TextBlock HorizontalAlignment="Left" FontSize="20">Website : uk.tommy.com</TextBlock>
            <TextBlock HorizontalAlignment="Left" FontSize="20">Cell : +44 1865 249544</TextBlock>
        </StackPanel>

        <StackPanel Margin="55">
            <TextBlock Text="&#xD;"/>
            <TextBlock Text="&#xD;"/>
            <TextBlock Text="&#xD;"/>
            <TextBlock Text="&#xD;"/>
            <TextBlock Text="&#xD;"/>
            <TextBlock Text="&#xD;"/>
            <TextBlock Text="&#xD;"/>
            <TextBlock Text="&#xD;"/>
            <TextBlock Text="&#xD;"/>
            <StackPanel>
                <TextBlock Text="&#xD;"/>
                <TextBlock Margin="10" FontSize="30">ii. Next</TextBlock>
                <TextBlock Margin="10" FontSize="30">(Clothing Store)</TextBlock>
                <TextBlock Margin="10" FontSize="30">Shop the very latest fashion and childrens clothing online at Next</TextBlock>
                <TextBlock HorizontalAlignment="Left" FontSize="20">Address : Unit 205, Queen St, Oxford OX1 1TR, UK</TextBlock>
                <TextBlock HorizontalAlignment="Left" FontSize="20">Website next.co.uk</TextBlock>
                <TextBlock HorizontalAlignment="Left" FontSize="20">Cell : +44 333 005 5017</TextBlock>
            </StackPanel>
        </StackPanel>
        <Frame Name="MainFrame" Margin="0,33,0,-33">
            <Button x:ConnectionId='1' x:Name="BackButton" Style="{StaticResource NavigationBackButtonNormalStyle}" VerticalAlignment="Top" HorizontalAlignment="Left"                />
        </Frame>
    </Grid>
</Page>

